{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "types": ["jest", "@testing-library/jest-dom"]
  }
}
